{
  "compilerOptions": {
    // Node backend basics
    "module": "node16",
    "target": "ES2020",
    "moduleResolution": "node16",

    // JS interop
    "allowJs": true,
    "esModuleInterop": true,

    // Types / libs
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],

    "noEmit": true, // Since we're not emitting JS files

    // Useful checks
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

  },
  "include": ["src"]
}
