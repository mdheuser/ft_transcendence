{
  "name": "ft-transcendence-frontend",
  "version": "1.0.0",
  "description": "Pong game frontend - TypeScript SPA",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && rollup -c && npm run build:css",
    "build:css": "tailwindcss -i ./src/styles/main.css -o ./dist/main.css --minify",
    "watch:ts": "tsc --watch",
    "watch:css": "tailwindcss -i ./src/styles/main.css -o ./dist/main.css --watch"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^20.0.0",
    "@types/qrcode": "^1.5.5",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "qrcode": "^1.5.3",
    "rollup": "^4.24.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.0",
    "tailwindcss": "^3.4.0"
  }
}
